<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_validated_sales_invoices_view" model="ir.ui.view">
	 <field name="name">res.config.validated.sales.invoices.view</field>
	 <field name="model">res.config.settings</field>
	 <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
	 <field name="arch" type="xml">
		<div data-key="sale_management"  position="inside">
            <h2>Validated Sales Invoices Permits</h2>
             <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="validation_sales_invoices_verify"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="validation_sales_invoices_verify"/>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                        <div class="text-muted">Allows the validation of the draft sales invoice to notify that it has been validated</div>
                    </div>
                </div>
            </div>
		 </div>
	</field>
 </record>
</odoo>